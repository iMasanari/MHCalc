{
  "compilerOptions": {
    "outDir": "./scripts/",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "target": "es5",
    "lib": [
      "dom", "es2015", "es2015.promise"
    ],
    "module": "es6",
    "moduleResolution": "node",
    "jsx": "react",
    "jsxFactory": "preact.h",
    "noEmitHelpers": true,
    "importHelpers": true
  },
  "files": [
    "./src/index.tsx",
    "./src/preact-redux.d.ts"
  ]
}